@page "/"

@using MudBlazor

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="text-center pa-4">
    <MudText Typo="Typo.h2" Class="mb-4">Employee Management System</MudText>

    <MudText Typo="Typo.body1" Class="mb-4">
        Welcome to the Employee Management System! Here you can manage employee records, track attendance, and organize departments efficiently.
    </MudText>

    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h6">Manage Employees</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>View, add, or edit employee information.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Href="/employees" Color="Color.Primary" Variant="Variant.Filled">Go to Employees</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h6">Attendance Tracking</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>Keep track of employee attendance easily.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Href="/attendances" Color="Color.Secondary" Variant="Variant.Filled">Go to Attendances</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h6">Departments Management</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>Manage departments and organize teams effectively.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Href="/departments" Color="Color.Info" Variant="Variant.Filled">Go to Departments</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
